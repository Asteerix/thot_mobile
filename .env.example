# Exemple de configuration pour Thot
# Copier ce fichier en .env et configurer selon votre environnement

# API Configuration
# IMPORTANT pour iOS: La détection automatique ngrok ne fonctionne pas sur iOS
# Vous devez configurer manuellement l'URL ngrok ici quand vous utilisez ngrok
API_BASE_URL=
# Exemples:
# Pour Android Emulator: http://10.0.2.2:3000/api
# Pour iOS Simulator: http://localhost:3000/api
# Pour appareil physique: http://[VOTRE_IP]:3000/api
# Pour ngrok: https://[VOTRE_DOMAINE].ngrok-free.app/api
# Pour production: https://app-b73e2919-0361-42d6-ba77-d154856cefb3.cleverapps.io/api
# Laissez vide pour utiliser la découverte automatique

# Feature Flags
BYPASS_LOGIN=false
ENABLE_DEBUG_MODE=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# API Timeouts (en millisecondes)
API_TIMEOUT=15000
API_CONNECT_TIMEOUT=5000

# Cache Configuration
CACHE_DURATION_HOURS=1
CACHE_MAX_SIZE_MB=50

# Development Tools (dev only)
SHOW_PERFORMANCE_OVERLAY=false
SHOW_MATERIAL_GRID=false
SHOW_SEMANTICS_DEBUGGER=false

# Production Settings (prod only)
ENABLE_ERROR_REPORTING=false
SENTRY_DSN=
MIN_LOG_LEVEL=info